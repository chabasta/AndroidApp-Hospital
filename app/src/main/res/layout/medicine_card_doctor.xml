<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/medicine_card_doctor"
    android:layout_width="330dp"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/background"
    app:cardElevation="3dp"
    app:contentPadding="4dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/doctor_medicines_card_layout"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:padding="8dp">


        <ImageView
            android:id="@+id/medicine_card_doctor_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_medicine"
            app:tint="#FFF5F5"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/medicine_card_doctor_name"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="5dp"
            android:fontFamily="Roboto"
            android:text="Karvalol"
            android:textColor="#E4E4E4"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@+id/medicine_card_doctor_image"
            tools:ignore="MissingConstraints"
         />

        <TextView
            android:id="@+id/medicine_card_doctor_desription_text"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="5dp"
            android:fontFamily="Roboto"
            android:text="It treats infections caused by the herpes virus (herpes simplex), including: cold sores, genital herpes"
            android:textColor="#E4E4E4"
            android:textSize="11sp"
            app:layout_constraintLeft_toRightOf="@+id/medicine_card_doctor_image"
            app:layout_constraintTop_toBottomOf="@+id/medicine_card_doctor_name"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/medicine_card_doctor_desription_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="10dp"
            android:fontFamily="Roboto"
            android:text="Description"
            android:textColor="#34B0E6"
            android:textSize="11sp"
            app:layout_constraintLeft_toRightOf="@+id/medicine_card_doctor_name"
            tools:ignore="MissingConstraints" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>